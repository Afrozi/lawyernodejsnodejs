<% layout('/partials/biolerplate.ejs') -%>
<body>
    <h1 class="show">Show data</h1>
    <form action="/" method="get">
        <button style="margin-left: 10rem;" class="click">Create Data</button>
    </form>
    <table style="margin-left: 10rem;">
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Description</th>
                <th>Handle</th>
              </tr>
        </thead>
        <tbody>
            <% for(let chat of chats ) { %>
                <tr>
                  <th scope="row"><%= chat.fname %></th>
                  <td><%= chat.lname %></td>
                  <td><%= chat.email %></td>
                  <td><%= chat.phone %></td>
                  <td><%= chat.description %></td>
                  <td>
                      <form action="/about/<%= chat.id %>/edit" method="get">
                         <button class="btn btn-primary">Update</button>
                      </form>
                      <form action="/about/<%= chat.id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger">Delete</button>
                      </form>
                  </td>
                </tr>
                <% } %>
        </tbody>
    </table>
    <footer class="copywrite">
        <div class="main-footer-div">
            <div class="logo-footer">
                <img src="/image/abvocate.png" alt="lawyer">
               <h1 class="footer-law">LAW FIRM</h1>
            </div>
            <div class="footer-main">
            <div class="head-footer">
               <h1 class="footer-sign">Welcome</h1>
               <p class="menu-bar">Home</p>
               <p class="menu-bar">About</p>
               <p class="menu-bar">Case Study</p>
               <p class="menu-bar">Practice Area</p>
               <p class="menu-bar">Contact</p>
            </div>
            <div class="head-footer">
               <h1 class="footer-sign">Practice</h1>
               <p class="menu-bar">Business</p>
               <p class="menu-bar">Family law</p>
               <p class="menu-bar">Crimenal law</p>
               <p class="menu-bar">Social law</p>
               <p class="menu-bar"></p>
               <p class="menu-bar"></p>
            </div>
            <div class="head-footer footer-nav">
               <h1 class="footer-sign">SignUp for Email Updates</h1>
               <p class="menu-bar">Business</p>
               <p class="menu-bar"> elit. Mollitia, hic accusantium.</p>
               <p class="menu-bar" style="padding-bottom: 15px;"> consectetur adipisicing elit.!</p>
               <input class="input-subscribe" type="email" placeholder="Type Email Address">
               <input class="subscribe" type="button" value="Subscribe Now">
            </div>
        </div>
    </div>
    </footer>
</body>

